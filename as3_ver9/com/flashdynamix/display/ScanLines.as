package com.flashdynamix.display {	import flash.display.Bitmap;	import flash.display.BitmapData;	import flash.display.Graphics;	import flash.display.PixelSnapping;	import flash.display.Shape;		import com.flashdynamix.abstract.AbstractDisplay;		/**	 * @author FlashDynamix	 */	public class ScanLines extends AbstractDisplay {		private var bmp : Bitmap;		private var bmd : BitmapData;		private var _width : int = 400;		private var _height : int = 400;		private var distance : int = 2;		private var lines : Shape;		public function ScanLines() {			super();						lines = new Shape();						this.mouseEnabled = false;			this.mouseChildren = false;						bmd = new BitmapData(_width, _height, true, 0x00FFFFFF);			bmp = new Bitmap(bmd, PixelSnapping.AUTO, false);						addChild(bmp);		}		public function setSize(width : int, height : int) : void {			_width = Math.min(2500, width);			_height = Math.min(2500, height);						bmd = new BitmapData(_width, _height, true, 0x00FFFFFF);						var vec : Graphics = lines.graphics;			vec.clear();			vec.lineStyle(1, 0x000000, 0.1);						var yPos : int = 0;			while(yPos < _height) {				vec.moveTo(0, yPos);				vec.lineTo(_width, yPos);				yPos += distance;			}						bmd.draw(lines);						bmp.bitmapData = bmd;		}	}}